      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>


    <div class="">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="">
       <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="field">
<%= f.label :image %>
